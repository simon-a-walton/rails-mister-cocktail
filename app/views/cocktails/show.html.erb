<% if @cocktail.photo.attached? %>
          <div class="row card" style="background-image: url('<%= cl_image_path(@cocktail.photo.key, height: 40, width: 120)%>');">
        <% else %>
          <div class="row card" style="background-image: url(https://res.cloudinary.com/diiwzk17a/image/upload/v1597509320/bg_er6x8h.jpg)">
        <% end %>
  <h1 class="white-text"> <i class="fas fa-cocktail"></i>  <%= @cocktail.name.capitalize %></h1>
</div>


</div>
<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 container-fluid-two pt-3">
    <ul>
        <li class="list-unstyled p-3">Recipe List:</li>
      <% @cocktail.doses.each do |dose| %>
        <li class="js p-3"><%= dose.description %> <%= dose.ingredient.name.capitalize %>
         <%=link_to dose_path(dose), method: :delete, data: { confirm: "Delete #{dose.description} #{dose.ingredient.name.capitalize}?" } do %>
          <i class="fa fa-trash p-2" aria-hidden="true"></i>
        <% end %>
        </li>
        <% end %>
    </ul>
 </div>
<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 container-fluid px-5 py-5">
<h4>Add dosage and ingredients for <%= @cocktail.name.capitalize %></h4>

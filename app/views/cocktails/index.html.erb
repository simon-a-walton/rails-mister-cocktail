
<h1 class="text-center">Cocktails</h1>
<div class="container-fluid" id="imagebar" style="background-image: linear-gradient(to bottom, rgba(255,255,255,0.6) 0%,rgba(255,255,255,0.9) 100%), url('<%= image_path("imagebar.jpg") %>')">


<p class="text-center py-1">Delicious recipes, modified by you!</p>


<div class="container">
  <div class="row justify-content-end m-3">
  <button type="button" class="btn"><%= link_to "Add a new cocktail",  new_cocktail_path %></button>
  </div>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
        <%=link_to cocktail_path(cocktail["id"]) do %>
        <% if cocktail.photo.attached? %>
          <div class="card mb-4" style="background-image: url('<%= cl_image_path(cocktail.photo.key, height: 300, width: 400, crop: :fill)%>');">
        <% else %>
          <div class="card mb-4">
        <% end %>
          <h3><%= cocktail.name.capitalize %></h3>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

</div>
